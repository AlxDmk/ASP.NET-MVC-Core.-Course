@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ASP.NET_MVC_Core._Course.ViewModels.AllProductsModel
@{
    ViewData["Title"] = "Товары";
    
}


<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Наименование</th>
        <th scope="col">Картинка</th><
        <th scope="col">Цена</th>
    </tr>
    </thead>
    <tbody>
     @foreach (var product in Model.AllProductDtos)
     {
         <tr>
             <td>@product.Id</td>
             <td>@product.Name</td>
             <td><img src="@product.ImageUrl" width="200"  alt="@product.Name"></td>
             <td>@product.Price</td>
             
         </tr>
     }
    </tbody>
</table>


<form method="post">
    <div class="form-group">
        <label for="Name">Наименование</label>
        <input type="text" class="form-control" id="Name" name="name" placeholder="Введите наименование товара">
    </div>
    <br>
    <div class="form-group">
        <label for="Price">Цена товара</label>
        <input type="text" class="form-control" id="Price" name="Price" placeholder="Укажите цену товара">
    </div>
    <br>
    <div class="form-group">
        <label for="ImageUrl">URL картинки товара</label>
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="Ссылка на картинку">
    </div>
        <br>
    <input type="submit" name="submit" value="Создать">
</form>